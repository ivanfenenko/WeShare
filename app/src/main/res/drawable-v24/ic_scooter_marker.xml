<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/marker_halo">
        <shape android:shape="oval">
            <stroke
                    android:width="0.2dp"
                    android:color="#80000000"/>
            <solid
                    android:color="#4d000000"/>
            <size
                    android:width="38dp"
                    android:height="38dp"/>
        </shape>
    </item>

    <item
            android:id="@+id/marker_center"
            android:gravity="center">
        <shape android:shape="oval">
            <gradient
                    android:angle="135"
                    android:endColor="#61ffd8"
                    android:startColor="#24ddaf"/>
            <size
                    android:width="5dp"
                    android:height="5dp"/>
        </shape>
    </item>
</layer-list>
